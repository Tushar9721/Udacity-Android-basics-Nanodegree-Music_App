<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ParticularSong">

    <ImageView
        android:id="@+id/backButtonSingleSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/tewenty_dp"
        android:src="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/singleSongName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="monospace"
        android:textSize="@dimen/twenty_four_sp"
        android:padding="@dimen/ten_dp"
        android:textColor="@color/white"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_music_notes" />

    <TextView
        android:id="@+id/playDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="monospace"
        android:textSize="@dimen/twenty_four_sp"
        android:padding="@dimen/ten_dp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:id="@+id/playButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hundred_dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/tewenty_dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tewenty_dp"
            android:src="@drawable/ic_previous_music" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tewenty_dp"
            android:src="@drawable/ic_play" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tewenty_dp"
            android:src="@drawable/ic_next_play" />

    </LinearLayout>


</LinearLayout>