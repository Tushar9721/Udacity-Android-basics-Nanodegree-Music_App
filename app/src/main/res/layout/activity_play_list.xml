<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tewenty_dp">

        <ImageView
            android:id="@+id/backButtonPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tewenty_dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/playlist"
            android:layout_toEndOf="@+id/backButtonPlaylist"
            android:layout_toRightOf="@+id/backButtonPlaylist"
            android:layout_margin="@dimen/tewenty_dp"
            android:textColor="@color/white"
            android:textSize="@dimen/thirty_sp" />

    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/forty_dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/favourite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:fontFamily="sans-serif-medium"
                android:padding="@dimen/tewenty_dp"
                android:text="@string/favourites"
                android:gravity="center"
                android:background="@drawable/playlist_text_view"
                android:textColor="@color/black"
                android:textSize="@dimen/tewenty_sp" />

            <TextView
                android:id="@+id/mostPlayed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium"
                android:padding="@dimen/tewenty_dp"
                android:text="@string/mostplayed"
                android:gravity="center"
                android:background="@drawable/playlist_text_view"
                android:textColor="@color/black"
                android:textSize="@dimen/tewenty_sp" />

            <TextView
                android:id="@+id/recentlyPlayed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium"
                android:padding="@dimen/tewenty_dp"
                android:text="@string/recently_played"
                android:gravity="center"
                android:background="@drawable/playlist_text_view"
                android:textColor="@color/black"
                android:textSize="@dimen/tewenty_sp" />

            <TextView
                android:id="@+id/custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:padding="@dimen/tewenty_dp"
                android:text="@string/custom"
                android:gravity="center"
                android:textSize="@dimen/tewenty_sp"
                android:background="@drawable/playlist_text_view"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>